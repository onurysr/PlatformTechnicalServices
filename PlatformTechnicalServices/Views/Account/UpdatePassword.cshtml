@model PasswordChangeViewModel

@{
    ViewBag.Title = "Şifre Güncelleme Sayfası";
}


<div class="content">
    <div class="container">
        <div class="row">
            <div class="col-md-12 col-lg-12 contents">
                <div class="row justify-content-center">
                    <div class="col-md-8">
                        <div class="mb-4">
                            <h1 style="text-align:center">@ViewBag.Title</h1>
                        </div>
                        <form asp-controller="Account" asp-action="UpdatePassword" method="post">
                            <div class="form-group first">
                                <label asp-for="OldPassword">Eski Şifre</label>
                                <input asp-for="OldPassword" class="form-control" />
                                <span asp-validation-for="OldPassword" class="text-danger"></span>

                            </div>
                            <div class="form-group last mb-4">
                                <label asp-for="NewPassword">Yeni Şifre</label>
                                <input asp-for="NewPassword" class="form-control" />
                                <span asp-validation-for="NewPassword" class="text-danger"></span>

                            </div>

                            <div class="form-group last mb-4">
                                <label asp-for="ConfirmPassword">Şifre Onay</label>
                                <input asp-for="ConfirmPassword" class="form-control" />
                                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>

                            </div>

                            <input type="submit" value="Güncelle" class="btn text-white btn-block btn-primary">
                        </form>
                    </div>
                </div>

            </div>

        </div>
    </div>
</div>