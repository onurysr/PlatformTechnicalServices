@model UserProfileViewModel
@{
    ViewBag.Title = $"{Model.Name} {Model.Surname} ";
}


<div class="content">
    <div class="container">
        <div class="row">
            <div class="col-md-12 col-lg-12 contents">
                <div class="row justify-content-center">
                    <div class="col-md-8">
                        <div class="mb-4">
                            <h1 style="text-align:center">@ViewBag.Title</h1>
                            <h1 style="text-align:center">Profil Sayfası</h1>
                        </div>
                        <div class="text-danger">@ViewBag.Message</div>
                        <form asp-controller="Account" asp-action="Profile" method="post">
                            <div class="form-group first">
                                <label asp-for="Name"></label>
                                <input asp-for="Name" class="form-control" />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                            <div class="form-group first">
                                <label asp-for="Surname"></label>
                                <input asp-for="Surname" class="form-control" />
                                <span asp-validation-for="Surname" class="text-danger"></span>

                            </div>
                            <div class="form-group first">
                                <label asp-for="Email"></label>
                                <input asp-for="Email" class="form-control" />
                                <span asp-validation-for="Email" class="text-danger"></span>

                            </div>

                            <input type="submit" value="Güncelle" class="btn text-white btn-block btn-primary">

                            <a asp-controller="Account" asp-action="Profile" class="d-block text-left my-4 text-muted">Şifremi Güncelle</a>

                        </form>
                    </div>
                </div>

            </div>

        </div>
    </div>
</div>
