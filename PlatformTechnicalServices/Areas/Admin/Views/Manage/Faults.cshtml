@{
    ViewBag.Title = "Tüm Arızalar";
}
<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <div class="row align-items-center">
                        <div class="col">
                            <h4 class="card-title">@ViewBag.Title</h4>
                        </div><!--end col-->
                    </div>  <!--end row-->
                </div><!--end card-header-->
                <div class="card-body">
                    <div id="dxGrid"></div>
                </div><!--end card-body-->
            </div><!--end card-->
        </div> <!--end col-->
    </div><!--end row-->
</div>


@section Scripts
{
    <script src="~/vendor/devextreme-aspnet-data/js/dx.aspnet.data.js"></script>
    <script>
        var dataGrid = null;
        $(() => {
            var url = '../../../api/faultapi';
            dataGrid = $("#dxGrid").dxDataGrid({
                remoteOperations: { paging: true, filtering: true, sorting: true, grouping: true, summary: true, groupPaging: true },
                dataSource: DevExpress.data.AspNet.createStore({
                    key: 'faultId',
                    loadUrl: `${url}/get`,
                    //updateUrl: `${url}/update`,
                    //insertUrl: `${url}/insert`,
                    //deleteUrl: `${url}/delete`,
                    onBeforeSend(method, ajaxOptions) {
                        ajaxOptions.xhrFields = { withCredentials: true };
                        console.log(method);
                        console.log(ajaxOptions);
                    }
                }),
                editing: {
                    mode: 'form',
                    allowUpdating: true
                },
                allowColumnResizing: true,
                showColumnLines: true,
                showRowLines: true,
                rowAlternationEnabled: true,
                showBorders: true,
                searchPanel: {
                    visible: true,
                    width: 240,
                    placeholder: "Ara..."
                },
                filterRow: {
                    visible: true,
                    applyFilter: "auto"
                },
                headerFilter: {
                    visible: true
                },
                export: {
                    enabled: true,
                    fileName: `Tüm Arızalar_${parseInt(Math.random() * 1000000000)}`,
                    allowExportSelectedData: true
                },
                paging: {
                    pageSize: 20
                },
                pager: {
                    showPageSizeSelector: true,
                    allowedPageSizes: [5, 15, 30, 45],
                    showInfo: true
                },
                selection: {
                    mode: "multiple"
                },
                columns: [
                    {
                        caption: 'faultId',
                        dataField: 'faultId',
                        visible: false,
                        allowFiltering: false,
                        formItem: { visible: false }
                    }, 
                    {
                        caption: 'Müşteri',
                        dataField: "userId",
                        lookup:{
                            dataSource: {
                                store : DevExpress.data.AspNet.createStore({
                                    key:"userId",
                                    loadUrl: "../../../api/faultapi/GetUserLookup"
                                }),
                                pageSize:10
                            },
                            displayExpr: "value",
                            valueExpr: "key"
                        }
                    },
                    {
                        caption: 'Teknisyen',
                        dataField: "teknisyenId",
                        lookup:{
                            dataSource:{
                                store: DevExpress.data.AspNet.createStore({
                                    key:"teknisyenId",
                                    loadUrl:"../../../api/faultapi/GetTeknisyenLookup"
                                }),
                                pageSize:10
                            },
                            displayExpr:"value",
                            valueExpr: "key"
                        }
                    },
                                        {
                        caption: 'Operator',
                        dataField: "operatorId",
                        lookup:{
                            dataSource:{
                                store: DevExpress.data.AspNet.createStore({
                                    key:"operatorId",
                                    loadUrl:"../../../api/faultapi/GetOperatorLookup"
                                }),
                                pageSize:10
                            },
                            displayExpr:"value",
                            valueExpr: "key"
                        }
                    },
                    {
                        caption: 'phoneNumber',
                        dataField: "phoneNumber"
                    },
                    {
                        caption: 'address',
                        dataField: "address"
                    },
                    {
                        caption: 'description',
                        dataField: "description",
                    },
                    {
                        caption: 'atanmaDurumu',
                        dataField: "atanmaDurumu",
                        dataType: "boolean"
                    },
                    {
                        dataField: "faultCreateDate",
                        caption: "Kayıt Tarihi",
                        dataType: "datetime",
                        format: 'dd/MM/yyyy HH:mm',
                        sortOrder:"desc"
                    },
                ]
            }).dxDataGrid("instance");
        });
    </script>
}